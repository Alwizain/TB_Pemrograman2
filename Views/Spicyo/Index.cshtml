<h1><b>Your Orders</b></h1>

<p>
    <a asp-action="Create" style="color: blue;"><u>Order Now</u></a>
</p>
<form asp-controller="Spicyo" asp-action="Index" method="get">
    <p>
        <select asp-for="MovieKategory" asp-items="Model.Kategorys">
            <option value="">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" class="btn btn-primary" style="margin-bottom: 10px;" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Spicyo[0].FoodName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spicyo[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spicyo[0].Kategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spicyo[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spicyo[0].Riview)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Spicyo)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FoodName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Riview)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" style="color: green;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" style="color: blue;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" style="color: red;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

